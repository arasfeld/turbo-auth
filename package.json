{
  "name": "turbo-auth",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean && rm -rf node_modules",
    "db:migrate:down": "turbo db:migrate:down",
    "db:migrate:fresh": "turbo db:migrate:fresh",
    "db:migrate:up": "turbo db:migrate:up",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "ui": "pnpm --filter @repo/ui ui"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "prettier": "^3.3.3",
    "turbo": "^2.1.2",
    "typescript": "~5.5.0"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
